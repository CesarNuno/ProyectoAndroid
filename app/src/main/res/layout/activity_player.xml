<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity"
    android:background="@color/black">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/frmOptionMenu"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnSongBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/leftarrow"
                android:background="@color/black"
                android:layout_gravity="center"
                ></ImageButton>
            <ImageView
                android:id="@+id/imgSong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/inaugh"
                android:layout_gravity="center"
                ></ImageView>
            <ImageButton
                android:id="@+id/btnSongNext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/derarrow"
                android:background="@color/black"
                android:layout_gravity="center"
                ></ImageButton>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frmOptionMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/home"
                >
            </ImageButton>
            <ImageButton
                android:id="@+id/btnPlayer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/reproductor"
                >
            </ImageButton>
            <ImageButton
                android:id="@+id/btnSongs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/canciones">
            </ImageButton>
            <ImageButton
                android:id="@+id/btnPlaylist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/playlist">
            </ImageButton>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>