<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relLayoutCardMusic"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:cardMaxElevation="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    android:layout_centerInParent="true"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:paddingRight="250dp"
    >
    <RelativeLayout
        android:id="@+id/relLayoutCardMusic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_centerInParent="true"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp"
            android:paddingRight="50dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                >

                <ImageView
                    android:id="@+id/albumImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/inaugh"
                    app:civ_border_color="@color/PurpleH"
                    app:civ_border_width="1dp"></ImageView>

                <TextView
                    android:id="@+id/songName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Ina"
                    android:layout_below="@id/albumImage"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/mainPurple"
                    android:layout_marginBottom="5dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="15sp"
                    >
                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>